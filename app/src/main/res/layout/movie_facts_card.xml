<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movie_fact_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="#f3f3f4"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp">

        <TextView
            android:id="@+id/movie_fact_card_title"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:fontFamily="@font/sf_pro_rounded_semibold"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:textColor="#B3141C25"
            tools:text="Budget" />

        <TextView
            android:id="@+id/movie_fact_card_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:fontFamily="@font/sf_pro"
            android:textSize="16sp"
            tools:text="$1.000.000" />
    </LinearLayout>

</androidx.cardview.widget.CardView>